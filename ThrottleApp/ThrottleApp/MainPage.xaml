<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:throttleapp="clr-namespace:ThrottleApp"
             x:Class="ThrottleApp.MainPage">

    <ContentPage.BindingContext>
        <throttleapp:TestModel/>
    </ContentPage.BindingContext>

    <Grid ColumnSpacing="0" RowSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <throttleapp:SliderView Grid.Row="0" Grid.Column="0"
            HorizontalOptions="FillAndExpand"
            BackgroundColor="#FFCD5C5C"
            ForegroundColor="White"
            IndicatorValue="{Binding TrimValue}"
            IndicatorValueRequest="{Binding TrimValueRequest}"
            SensitivityFactor=".1"
            MinValue="1"
            MaxValue="-1"/>
        <throttleapp:SliderView Grid.Row="0" Grid.Column="1"
            HorizontalOptions="FillAndExpand"
            BackgroundColor="#FF87CEFA"
            ForegroundColor="White"
            IndicatorValue="{Binding ThrottleValue}"
            IndicatorValueRequest="{Binding ThrottleValueRequest}"
            MinValue="0"
            MaxValue="1"/>

    </Grid>

</ContentPage>
